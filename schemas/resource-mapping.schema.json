{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uapf.dev/schemas/resource-mapping.schema.json",
  "title": "UAPF Resource Mapping (resources/mappings.yaml) Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "targets", "bindings"],
  "properties": {
    "kind": { "type": "string", "enum": ["uapf.resources.mapping"] },
    "targets": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/target" }
    },
    "bindings": {
      "type": "array",
      "items": { "$ref": "#/$defs/binding" }
    }
  },
  "$defs": {
    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "name"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["ai_agent", "human_role", "system_api", "mcp_tool"] },
        "name": { "type": "string" },
        "capabilities": { "type": "array", "items": { "type": "string" } },
        "endpoint": { "type": "string" }
      }
    },
    "binding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source", "targetId"],
      "properties": {
        "source": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "ref"],
          "properties": {
            "type": { "type": "string", "enum": ["bpmn.task", "dmn.decision", "cmmn.task"] },
            "ref": { "type": "string", "minLength": 1 }
          }
        },
        "targetId": { "type": "string", "minLength": 1 },
        "mode": { "type": "string", "enum": ["manual", "assisted", "autonomous"], "default": "assisted" },
        "notes": { "type": "string" }
      }
    }
  }
}
