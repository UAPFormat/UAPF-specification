{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uapf.dev/schemas/ownership.schema.json",
  "title": "UAPF Ownership Metadata Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "owners"],
  "properties": {
    "kind": { "type": "string", "enum": ["uapf.metadata.ownership"] },
    "owners": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "id"],
        "properties": {
          "type": { "type": "string", "enum": ["team", "person", "role", "organization"] },
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string" },
          "contact": { "type": "string", "format": "email" },
          "role": {
            "type": "string",
            "enum": ["owner", "maintainer", "contributor", "reviewer"],
            "default": "owner"
          }
        }
      }
    },
    "approvers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of user/team IDs authorized to approve changes"
    },
    "escalation": {
      "type": "object",
      "properties": {
        "primary": { "type": "string" },
        "secondary": { "type": "string" },
        "sla_hours": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
